@model IEnumerable<LionTaskManagementApp.Models.TaskModel>

@{
    ViewData["Title"] = "PosterHome";
}

<h1>My Created Tasks</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.OwnerId)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TakenById)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                <td @if (item.Status.Equals(MyTaskStatus.PendingComplete.ToString()))
                    {
                        <text>class="text-danger"</text>
                    }>
                @Html.DisplayFor(modelItem => item.Status)
                @if (!string.IsNullOrEmpty(item.RequestList))
                {
                    <span class="badge badge-success">Contractor Check In</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TakenById)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td>
                <a asp-action="PosterEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="PosterDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-action="PosterDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
