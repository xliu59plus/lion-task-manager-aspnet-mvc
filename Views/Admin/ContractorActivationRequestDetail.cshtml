@model LionTaskManagementApp.Models.ContractorInfo

<h2 class="text-center my-4">Contractor Activation Request Details</h2>
<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h4>Company Name:</h4>
            <p>@Model.CompanyName</p>
        </div>
        <div class="col-md-6">
            <h4>EIN:</h4>
            <p>@Model.EIN</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <h4>Full Address:</h4>
            <p>@Model.FullAddress</p>
        </div>
        <div class="col-md-6">
            <h4>First Line:</h4>
            <p>@Model.FirstLine</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <h4>Second Line:</h4>
            <p>@Model.SecondLine</p>
        </div>
        <div class="col-md-6">
            <h4>City:</h4>
            <p>@Model.City</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <h4>State/Province:</h4>
            <p>@Model.StateProvince</p>
        </div>
        <div class="col-md-6">
            <h4>Zip Code:</h4>
            <p>@Model.ZipCode</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <h4>Facebook Link:</h4>
            <p>@Model.FacebookLink</p>
        </div>
        <div class="col-md-6">
            <h4>Instagram Link:</h4>
            <p>@Model.InstagramLink</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <h4>Artwork Specialization:</h4>
            <p>@Model.ArtworkSpecialization</p>
        </div>
        <div class="col-md-6">
            <h4>Does Print White Color:</h4>
            <p>@Model.DoesPrintWhiteColor</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <h4>Supports CMYK:</h4>
            <p>@Model.SupportsCMYK</p>
        </div>
        <div class="col-md-6">
            <h4>Additional Notes:</h4>
            <p>@Model.AdditionalNotes</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <form asp-action="ApproveRequest" asp-controller="Admin" method="post">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <button type="submit" class="btn btn-success btn-block">Approve</button>
            </form>
        </div>
        <div class="col-md-6">
            <form asp-action="DenyRequest" asp-controller="Admin" method="post">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <div class="form-group">
                    <label for="denyComments">Deny Comments:</label>
                    <textarea name="denyComments" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-danger btn-block">Deny</button>
            </form>
        </div>
    </div>
</div>

