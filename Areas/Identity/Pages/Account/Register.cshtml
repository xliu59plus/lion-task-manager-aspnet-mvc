@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container register-page">
    <div class="row">
        <!-- 左侧图形区域 -->
        <div class="col-lg-5 register-left d-flex align-items-center justify-content-center">
            <img src="~/img/your-image.png" alt="Your Graphic" class="img-fluid" />
        </div>

        <!-- 右侧表单区域 -->
        <div class="col-lg-7 register-form">
            <h3 class="text-center mb-4">Register for an account</h3>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <!-- Role Selection -->
                <div class="role-selection mb-5">
                    <label class="d-block text-center mb-3">Select your type of role</label>
                    <div class="d-flex justify-content-between">
                        <input type="radio" class="btn-check" asp-for="Input.Role" value="Inactive_Poster" id="role-individual" autocomplete="off" />
                        <label class="btn btn-outline-primary role-card" for="role-individual">
                            <div class="role-icon">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <span>Task Owner (Become a user that will post tasks)</span>
                        </label>

                        <input type="radio" class="btn-check" asp-for="Input.Role" value="Inactive_Taker" id="role-business" autocomplete="off" />
                        <label class="btn btn-outline-primary role-card" for="role-business">
                            <div class="role-icon">
                                <i class="bi bi-briefcase"></i>
                            </div>
                            <span>Contractor (Become a user that will resolve tasks)</span>
                        </label>
                    </div>
                </div>

                <!-- Form Fields -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Enter your password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Register</button>
                <p class="text-center mt-3">Already have an account? <a asp-page="./Login">Sign in</a></p>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
