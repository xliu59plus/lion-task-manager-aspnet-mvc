@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-4">
        <div class="card shadow-sm" style="border-radius: 15px;"> 
            <div class="card-body">
                <section>
                    <form id="account" method="post">
                        <h2 class="text-center mb-3">Welcome Back</h2>
                        <p class="text-center text-muted mb-4">Log in with your credentials</p>
                        <hr class="mb-4" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <!-- Email Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <!-- Password Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <!-- Remember Me Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        
                        <!-- Login Button -->
                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg" style="border-radius: 25px;">Log in</button>
                        </div>
                        
                        <!-- Additional Links -->
                        <div class="text-center mt-4">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                        </div>
                        <div class="text-center mt-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Register as a new user</a>
                        </div>
                        <div class="text-center mt-2">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Resend email confirmation</a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

